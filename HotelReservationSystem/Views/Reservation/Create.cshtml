@{
    ViewData["Title"] = "Make Reservation";
}

<h2 class="mb-4">Make a New Reservation</h2>

<form asp-action="Create" method="post">
    <div class="row mb-3">
        <div class="col-md-6">
            <label class="form-label">Full Name <span class="text-danger">*</span></label>
            <input type="text" name="FullName" class="form-control" required />
        </div>
        <div class="col-md-6">
            <label class="form-label">Email <span class="text-danger">*</span></label>
            <input type="email" name="Email" class="form-control" required />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-4">
            <label class="form-label">Room Type <span class="text-danger">*</span></label>
            <select name="RoomType" class="form-select" required>
                <option value="">-- Select --</option>
                <option value="Standard">Standard Room</option>
                <option value="Deluxe">Deluxe Room</option>
                <option value="Suite">Executive Suite</option>
                <option value="ResidentialSuite">Residential Suite (Weekly/Monthly)</option>
            </select>
        </div>
        <div class="col-md-4">
            <label class="form-label">Arrival Date <span class="text-danger">*</span></label>
            <input type="date" name="ArrivalDate" class="form-control" required />
        </div>
        <div class="col-md-4">
            <label class="form-label">Departure Date <span class="text-danger">*</span></label>
            <input type="date" name="DepartureDate" class="form-control" required />
        </div>
    </div>

    <div class="mb-3">
        <label class="form-label">Number of Guests <span class="text-danger">*</span></label>
        <input type="number" name="Occupants" min="1" max="6" class="form-control" value="1" required />
    </div>

    <div class="mb-3 form-check">
        <input type="checkbox" name="HasCreditCard" id="ccCheck" class="form-check-input" />
        <label class="form-check-label" for="ccCheck">Secure with Credit Card (Prevents auto-cancellation)</label>
    </div>

    <div id="creditCardSection" style="display:none;">
        <h5>Credit Card Details</h5>
        <div class="row">
            <div class="col-md-6 mb-2">
                <input type="text" name="CardNumber" placeholder="Card Number (e.g., 4111 1111 1111 1111)" class="form-control" maxlength="19" />
            </div>
            <div class="col-md-3 mb-2">
                <input type="text" name="Expiry" placeholder="MM/YY" class="form-control" maxlength="5" />
            </div>
            @* <div class="col-md-3 mb-2">
                <input type="text" name="CVV" placeholder="CVV" class="form-control" maxlength="4" />
            </div> *@
        </div>
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-success">✅ Confirm Reservation</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <script>
        document.getElementById('ccCheck').addEventListener('change', function () {
            document.getElementById('creditCardSection').style.display = this.checked ? 'block' : 'none';
        });
    </script>
}