@{
    var guest = ViewBag.Guest as Reservation; // Cast to actual type
    var isOverdue = ViewBag.IsOverdue as bool? ?? false;
}

@if (guest != null)
{
    <div class="card mt-4">
        <div class="card-header bg-info text-white">
            Guest: @guest.Customer?.FullName | Room: @guest.Room?.RoomNumber
        </div>
        <div class="card-body">
            <p><strong>Check-in:</strong> @guest.ArrivalDate.ToString("dd/MM/yyyy")</p>
            <p><strong>Scheduled Checkout:</strong> @guest.DepartureDate.ToString("dd/MM/yyyy")</p>
            <p><strong>Actual Checkout:</strong> @DateTime.Today.ToString("dd/MM/yyyy")</p>

            @if (isOverdue)
