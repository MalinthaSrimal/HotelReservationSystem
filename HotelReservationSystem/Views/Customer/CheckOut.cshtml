@{
    ViewData["Title"] = "Check Out";
}

<h2>Guest Check-Out</h2>

<form asp-action="CheckOut" method="post">
    <div class="mb-3">
        <label class="form-label">Guest Name or Room Number</label>
        <input type="text" name="SearchTerm" class="form-control" placeholder="Enter name or room number" required />
    </div>

    <button type="submit" class="btn btn-primary">🔍 Find Guest</button>
</form>

<form asp-controller="Billing" asp-action="ProcessCheckout" method="post">
        <div class="card mt-4">
            <div class="card-header bg-info text-white">
                Guest: @ViewBag.Guest.FullName | Room: @ViewBag.Guest.RoomId
            </div>
            <div class="card-body">
                <p><strong>Check-in:</strong> @ViewBag.Guest.CheckInDate.ToString("dd/MM/yyyy")</p>
                <p><strong>Scheduled Checkout:</strong> @ViewBag.Guest.ScheduledCheckout.ToString("dd/MM/yyyy")</p>
                <p><strong>Actual Checkout:</strong> @DateTime.Today.ToString("dd/MM/yyyy")</p>
            </div>
        </div>
</form>

